<% layout('layouts/boilerPlate') %> 
    <h3>All Campgrounds</h3>
    <a href="/campgrounds/new">Add Campground</a>

    <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= campground.image %>" style="width: 18rem; height: 15rem;" class='img-fluid' class="card-img-top" alt="...">
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %> </h5>
                        <p class="card-text"><%= campground.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %> </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %> "><button class="btn btn-dark">View Campground</button></a>
                    </div>
                </div>
        </div>
    <% } %>